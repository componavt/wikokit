<installation version="1.0">

<info>
    <appname>wiwordik</appname>
    <appversion>0.02</appversion>
    <authors>
        <author name="Andrew Krizhanovsky" email="andrew.krizhanovsky@gmail.com" />
    </authors>
    <url>http://code.google.com/p/wikokit/</url>
    <javaversion>1.6</javaversion>
</info>

<guiprefs height="600" resizable="yes" width="800">
    <laf name="metouia">
        <os family="unix" />
    </laf>
    <laf name="liquid">
        <os family="windows" />
    </laf>
</guiprefs>

<variables>
    <variable name="DesktopShortcutCheckboxEnabled" value="true"/>
    <variable name="ApplicationShortcutPath" value="ApplicationShortcuts"/>
</variables>


<locale>
    <langpack iso3="eng"/>
    <langpack iso3="rus"/>
</locale>

<resources>
    <!--res src="docs/install-readme.html" id="HTMLInfoPanel.info"/-->
    <res src="../gpl.txt" id="LicencePanel.licence"/>
    <!--res src="Licence.txt" id="LicencePanel.licence"/-->
    <!--res src="langsel.jpg" id="installer.langsel.img"/-->
    <res src="shortcutSpec.xml" id="shortcutSpec.xml"/>
</resources>

<panels>
    <panel classname="HelloPanel"/>
    <!--panel classname="HTMLInfoPanel"/-->
    <panel classname="LicencePanel"/>
    <panel classname="PacksPanel"/>
    <panel classname="TargetPanel"/>
    <panel classname="InstallPanel"/>
    <panel classname="ShortcutPanel" id="shortcutpanel"/>
    <panel classname="SimpleFinishPanel"/>
</panels>

<packs>
    <pack name="Core" required="yes">
        <description>wiwordik core files.</description>
        <fileset dir="" targetdir="$INSTALL_PATH">
        <include name="*.sqlite" />
        <include name="wiwordik.bat" />
        <include name="../gpl.txt" />

        <include name="dist/wiwordik.jar" />
        <include name="dist/lib/*.jar" />
        <include name="icons/koala.ico" />
        <!--include name="docs/release_notes.txt" /-->
        </fileset>
    </pack>
    <!--pack name="Source" required="no">
        <description>wiwordik source files.</description>
        <fileset dir="" targetdir="$INSTALL_PATH">
        <include name="*" />
        <include name="src/**/*" />
        <include name="test/**/*" />
        </fileset>
    </pack-->

</packs>

    <!-- The native libraries to add. This is required for creating shortcuts on Windows -->
    <native type="izpack" name="ShellLink.dll"/>

    <native type="3rdparty" name="COIOSHelper.dll" stage="both">
        <os family="windows"/>
    </native>
    
    <listeners>
        <listener installer="RegistryInstallerListener"
            uninstaller="RegistryUninstallerListener" >
            <os family="windows"/>
        </listener>
    </listeners>

    
</installation>
