<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:orientation="vertical" android:weightSum="1">
<Spinner android:layout_height="wrap_content" android:id="@+id/spinner_id" android:layout_width="match_parent"></Spinner>
<RelativeLayout android:layout_width="match_parent" android:id="@+id/relativeLayout1" android:layout_gravity="clip_vertical" android:gravity="bottom" android:layout_height="wrap_content">
    <TextView android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="wrap_content" android:layout_alignParentTop="true" android:layout_centerHorizontal="true" android:id="@+id/textView_word_top" android:text="@string/word_top" android:clickable="true" android:fadingEdge="horizontal"></TextView>
    <TextView android:text="@string/word_left" android:layout_width="wrap_content" android:id="@+id/textView_word_left" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_height="wrap_content" android:layout_below="@+id/textView_word_top" android:layout_alignParentLeft="true" android:layout_marginTop="30dp" android:fadingEdge="vertical"></TextView>
    <TextView android:text="@string/word_right" android:layout_width="wrap_content" android:id="@+id/textView_word_right" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_height="wrap_content" android:layout_below="@+id/textView_word_left" android:layout_alignParentRight="true" android:layout_marginTop="28dp"></TextView>
    <TextView android:text="@string/word" android:layout_width="wrap_content" android:id="@+id/textView_word" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_height="wrap_content" android:layout_below="@+id/textView_word_right" android:layout_centerHorizontal="true" android:layout_marginTop="33dp"></TextView>
</RelativeLayout>

<LinearLayout
    android:id="@+id/linearLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_marginRight="35dp"
    android:gravity="fill_horizontal" >

    <TextView
        android:id="@+id/textView_word_www"
        android:text="@string/word_www"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <TextView android:text="@string/word_def" android:id="@+id/textView_word_def" android:textAppearance="?android:attr/textAppearanceMedium" android:layout_height="wrap_content" android:layout_width="wrap_content"></TextView>
</LinearLayout>
<!-- Beautiful horizontal line -->
<ImageView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:src="@android:drawable/divider_horizontal_dark"
    android:background="#757575"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:scaleType="fitXY"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="2dp"
    android:paddingTop="2dp" />
<TextView android:textAppearance="?android:attr/textAppearanceSmall" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_gravity="center_horizontal" android:id="@+id/textView_mark" android:text="@string/mark" android:gravity="center_horizontal"></TextView>
</LinearLayout>
